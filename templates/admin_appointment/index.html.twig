{% extends 'base.html.twig' %}

{% block title %}Hello AdminAppointmentController!{% endblock %}

{% block body %}
<h3>Liste des RDV</h3>

<a href="{{ path('admin_appointment') }}"</a>
<a href="{{ path('admin_appointment_add') }}" class="btn btn-primary mb-3">Créer un RDV</a>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Patient</th>
      <th>Titre</th>
      <th>Durée</th>
      <th>Date de création</th>
      <th>Téléphone</th>
      <th>Date du RDV</th>
      <th>Status</th>
      <th>Historique</th>
      <th>Pratiques thérapeutiques</th>
      <th>Actions<th>
    </tr>
  </thead>
  <tbody>
    {% for reservation in reservations %}
      <tr>
        <td>{{ reservation.id }}</td>
        <td>{{ reservation.user}}</td>
        <td>{{ reservation.title}}</td>
        <td>{{ reservation.duration}}</td>
        <td>{{ reservation.createdAt|date('d/m/Y H:i')}}</td>
        <td>{{ reservation.phone}}</td>
        <td>{{ reservation.doDay}}</td>
        <td>{{ reservation.status }}</td>
        <td>{{ reservation.historical}}</td>
        <td>{{ reservation.practices}}</td>
        
        <td>
          <a href="{{ path('admin_appointment_edit', {id: reservation.id}) }}" class="btn btn-same bg-5">Modifier</a>
          <a href="{{ path('admin_appointment_delete', {id: reservation.id}) }}" class="btn btn-same bg-5">Supprimer</a>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>







{% endblock %}
