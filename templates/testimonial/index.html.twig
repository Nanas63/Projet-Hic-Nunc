{% extends 'base.html.twig' %}

{% block title %}Hello TestimonialController!{% endblock %}

{% block body %}
{# <section class="container my-5">
  <h2 class="text-center mb-4">Témoignages</h2>
<div class="container-card2"> #}

<section class="bg-light-green py-0">
<div class="container-testimonials">
    <div class="w-100 mx-auto row text-center">
        <div class="col-md-12 mb-md-0">
            <h2 class="fw-bold3">Tous les témoignages</h2>
        </div>
    </div>  
</div> 
</section>


    <div class="d-flex flex-column mb-5 gap-4">
        {% for testimonial in testimonials %}
            <div class="card mx-auto text-center" style="max-width: 50rem;">
                <h5 class="card-title mt-5">{{ testimonial.firstName }}</h5>
                <h6 class="mt-3"> {{ testimonial.createdat|date('d/m/Y') }}</h6>
                    <div class="card-body">
                        <p class="card-text">{{ testimonial.content|raw }}</p>
                    </div>
            </div>
        {% endfor %}
        
    </div>
    <div class="col-md-12 mb-md-0 text-center">
    <a href="{{ path('app_home') }}" class="btn btn-same-bg2 mb-5 mt-3 me-md-2 px-4">← Retour à l'accueil</a>
    </div>
</div>
</section>


{% endblock %}
