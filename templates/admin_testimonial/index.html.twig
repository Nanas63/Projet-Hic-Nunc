{% extends 'base.html.twig' %}
{% block body %}

<h3>Liste des témoignages</h3>

<a href="{{ path('admin_testimonial_index') }}"</a>
<a href="{{ path('admin_testimonial_add') }}" class="btn btn-same-bg2">Ajouter un témoignage</a>

<table class="table">
  <thead>
    <tr>
      
      <th>Contenu</th>
      <th>Date de création</th>
      <th>En ligne</th>
      <th>Auteur</th>
      <th>Actions<th>
    </tr>
  </thead>
  <tbody>
  {% for testimonial in testimonials %}
    <tr>
        <td>{{ testimonial.content }}</td>
        <td>{{ testimonial.createdat|date(('d/m/Y H:i'))}}</td>
        <td>{{ testimonial.visible}}</td>
        <td>{{ testimonial.firstname}}</td>
                
        <td>
          <a href="{{ path('admin_testimonial_edit', {id: testimonial.id}) }}" class="btn btn-same-bg5">Modifier</a>
          <a href="{{ path('admin_testimonial_delete', {id: testimonial.id}) }}" class="btn btn-same-bg5">Supprimer</a>
        </td>
    </tr>

    
  {% endfor %}
  </tbody>
</table>
{% endblock %}
